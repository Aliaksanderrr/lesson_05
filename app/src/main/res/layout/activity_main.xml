<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/main_activity_start_end_padding"
        android:paddingTop="@dimen/main_activity_start_end_padding"
        android:paddingEnd="@dimen/main_activity_start_end_padding"
        android:paddingBottom="@dimen/main_activity_top_bottom_padding"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/first_number_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_activity_linear_items_bottom_margin"
            android:gravity="center"
            android:hint="@string/main_activity_hint_for_num_1"
            android:inputType="number"
            android:textSize="@dimen/main_activity_text_size" />

        <EditText
            android:id="@+id/second_number_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_activity_linear_items_bottom_margin"
            android:gravity="center"
            android:hint="@string/main_activity_hint_for_num_2"
            android:inputType="number"
            android:textSize="@dimen/main_activity_text_size" />

        <Button
            android:id="@+id/sum_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_activity_linear_items_bottom_margin"
            android:text="@string/main_activity_text_for_button"
            android:textSize="@dimen/main_activity_text_size" />

        <TextView
            android:id="@+id/sum_result_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/main_activity_text_size"
            android:textStyle="bold"
            tools:text="42" />
    </LinearLayout>
</ScrollView>
